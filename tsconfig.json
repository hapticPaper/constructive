{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "types": ["vite/client", "mdx"],
    "resolveJsonModule": true
  },
  "include": ["src", "scripts", "vite.config.ts"]
}
